{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    {
      "type": "bind",
      "source": "/biggie/users/vincenzo/ai-repos",
      "target": "/repos"
    }
  ],
  "runArgs": [
    "--gpus=all"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "kuba-p.glsl-lsp",
        "Tyriar.luna-paint",
        "ms-toolsai.jupyter",
        "svelte.svelte-vscode",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },
  "shutdownAction": "none"
}